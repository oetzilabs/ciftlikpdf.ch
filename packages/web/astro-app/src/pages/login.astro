---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout>
  <div class="w-full">
    <h1 class="text-4xl font-bold">Login</h1>
    <form class="flex flex-col space-y-4">
      <label class="flex flex-col">
        <span class="text-lg font-semibold">Email</span>
        <input type="email" class="border border-gray-300 rounded-md p-2" />
      </label>
      <label class="flex flex-col">
        <span class="text-lg font-semibold">Password</span>
        <input type="password" class="border border-gray-300 rounded-md p-2" />
      </label>
      <button type="submit" class="bg-blue-500 text-white rounded-md p-2">Login</button>
    </form>
  </div>
</MainLayout>
